{% for ledColor in classes.led.ev3LedColors %}
  // Sets the brightness of the built-in EV3 LEDs so that they appear
  // {{ ledColor[0] }}, using the specified intensity percentage (0-1).
  static void set_{{ ledColor[0] }}(float intensity) {
    mix_colors({{ ledColor[1].red }} * intensity, {{ ledColor[1].green }} * intensity);
  }

  // Sets the brightness of the built-in EV3 LEDs so that they appear
  // {{ ledColor[0] }} at full intensity.
  static void {{ ledColor[0] }}_on() {
    set_{{ ledColor[0] }}(1.0f);
  }
{% endfor %}
